<% include partials/_header %>

<div class="container mt-2">
  <div class="row">
  
      <div class="card-body">
        <form class="mb-3" action="/update/<%= data.id %>" method="POST">
          <div class="form-group">
            <input type="text" name="name" value="<%= data.name%>" placeholder="Name" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="pago" value="<%= data.pago%>" placeholder="pago" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="lugar" value="<%= data.lugar%>" placeholder="lugar" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="motivo" value="<%= data.motivo%>" placeholder="motivo" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="fechaPago" value="<%= data.fechaPago%>" placeholder="fechaPago" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">
            save customer
          </button>
        </form>
      </div>
    
  </div>
</div>

<% include partials/_footer %>
